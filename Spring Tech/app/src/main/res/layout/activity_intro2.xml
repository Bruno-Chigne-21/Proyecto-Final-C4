<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="48dp"
    android:background="@android:color/white"
    tools:context=".ui.Introduccion.IntroActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fontFamily="@font/font_family"
        android:text="Este es el primer paso!"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/people" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/font_family"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Obten nuestro beneficios"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/secundario"
            android:text="RegÃ­strate"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:textSize="15.4sp"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/ing"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/secundario"
            android:text="Ingresa"
            android:layout_gravity="center"
            android:textSize="15.4sp"
            android:textColor="@color/blanco"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

</LinearLayout>
