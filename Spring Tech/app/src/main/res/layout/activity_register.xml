<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="48dp"
    android:background="@android:color/white"
    tools:context=".ui.Introduccion.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/font_family"
        android:text="Crear Cuenta"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/font_family"
        android:gravity="center_vertical"
        android:text="Correo"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondeo"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="@color/negro"
        android:textColorHint="@color/gris_oscuro"
        android:layout_weight="0.2"
        android:hint="Escribe tu correo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family"
        android:gravity="center_vertical"
        android:text="Contraseña"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/contra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondeo"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="@color/negro"
        android:textColorHint="@color/gris_oscuro"
        android:layout_weight="0.2"
        android:hint="Escribe tu contraseña" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family"
        android:gravity="center_vertical"
        android:text="Nombre"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondeo"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="@color/negro"
        android:textColorHint="@color/gris_oscuro"
        android:layout_weight="0.2"
        android:hint="Escribe tu apellido" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family"
        android:gravity="center_vertical"
        android:text="Apellido Paterno"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/apePat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondeo"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="@color/negro"
        android:textColorHint="@color/gris_oscuro"
        android:layout_weight="0.2"
        android:hint="Escribe tu apellido paterno"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family"
        android:gravity="center_vertical"
        android:text="Apellido materno"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/apeMat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondeo"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColorHint="@color/gris_oscuro"
        android:layout_weight="0.2"
        android:hint="Escribe tu apellido materno"
        android:textColor="@color/negro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family"
        android:gravity="center_vertical"
        android:text="Dni"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/dni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondeo"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColorHint="@color/gris_oscuro"
        android:layout_weight="0.2"
        android:hint="Escribe tu dni"
        android:textColor="@color/negro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family"
        android:gravity="center_vertical"
        android:text="Fecha de nacimiento"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/fec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/redondeo"
        android:hint="yyyy-mm-dd"
        android:padding="10dp"
        android:textColor="@color/negro"
        android:textColorHint="@color/gris_oscuro"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/secundario"
        android:gravity="center"
        android:padding="10dp"
        android:text="Crear"
        android:textColor="@color/negro"
        android:textSize="18dp" />

</LinearLayout>

